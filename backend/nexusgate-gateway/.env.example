# ====================================================================================
# NEXUSGATE GATEWAY - ENVIRONMENT VARIABLES (EXAMPLE)
# ====================================================================================
# Copy this file to .env and update with your actual values
# DO NOT commit .env to version control!

# ====================================================================================
# APPLICATION
# ====================================================================================
SERVER_PORT=8081

# ====================================================================================
# REDIS CONFIGURATION (MANDATORY - ElastiCache for AWS)
# ====================================================================================
# REQUIRED: Redis is mandatory for rate limiting
# For AWS: Use ElastiCache endpoint
# For Local: Use localhost
SPRING_DATA_REDIS_HOST=your-redis-endpoint.cache.amazonaws.com
SPRING_DATA_REDIS_PORT=6379

# ====================================================================================
# CONFIG SERVICE
# ====================================================================================
# Config service URL - use internal service name for ECS/Kubernetes
CONFIG_SERVICE_URL=http://localhost:8082

# ====================================================================================
# ANALYTICS SERVICE (OPTIONAL)
# ====================================================================================
# Analytics service URL - use internal service name for ECS/Kubernetes
ANALYTICS_SERVICE_URL=http://localhost:8084

# ====================================================================================
# JWT SECRET (CRITICAL - MUST BE 32+ CHARACTERS)
# ====================================================================================
# Generate a secure secret: openssl rand -base64 32
JWT_SECRET=your-256-bit-secret-key-change-this-in-production-must-be-at-least-32-chars

# ====================================================================================
# AWS SPECIFIC (FOR ECS DEPLOYMENT)
# ====================================================================================
AWS_REGION=ap-south-1

# Spring Profile (optional - use 'prod' for production)
SPRING_PROFILES_ACTIVE=default

# ====================================================================================
# LOGGING (optional)
# ====================================================================================
# LOGGING_LEVEL_ROOT=INFO
# LOGGING_LEVEL_COM_NEXUSGATE_GATEWAY=DEBUG
